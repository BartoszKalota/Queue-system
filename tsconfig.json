{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "build",
    "sourceMap": true,
    "target": "ES6",
    "allowJs": true,
    "esModuleInterop": true,
    "lib": [
      "es6",
      "esnext"
    ],
    "types": [
      "node"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ],
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "strict": true
  },
  "include": ["src/**.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}